        "size": {
          "type": "number"
        },
        "stroke": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "Dataset": {
      "additionalProperties": false,
      "properties": {
        "metadata": {
          "$ref": "#/definitions/Metadata"
        },
